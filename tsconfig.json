{
  "compilerOptions": {
    "types": ["@types/node"],
    "target": "es2016",        
    "module": "commonjs",                               
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,           
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src"
  },
    "include": ["src/**/*.tsx", "src/index.tsx"],
    "exclude": ["node_modules"]
}